# === Configuración base ===
APP_ENV=development
PROJECT_NAME=Vacuno Backend
API_V1_PREFIX=/api/v1
LOG_LEVEL=info

# === Base de datos ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vacuno_db
POSTGRES_USER=vacuno_user
POSTGRES_PASSWORD=change_me
DATABASE_URL=postgresql+psycopg2://vacuno_user:change_me@postgres:5432/vacuno_db

# === Autenticación/JWT ===
SECRET_KEY=replace_me_with_secure_random_value
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
PASSWORD_HASH_SCHEME=bcrypt

# === Servicios Externos / Integraciones ===
REPORT_BUCKET=s3://pending
SYNC_QUEUE_URL=https://sqs.<region>.amazonaws.com/<account>/pending
